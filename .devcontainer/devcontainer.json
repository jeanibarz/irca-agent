{
  "name": "irca_agent_devcontainer",
  "dockerComposeFile": "../docker-compose.dev.yml",
  // "remoteUser": "vscode",
  // "containerUser": "vscode",
  // "updateRemoteUserUID": true,
  "service": "app",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "bash ./.devcontainer/post-create-wrapper.bash",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode-remote.remote-containers",
        "redhat.vscode-yaml",
        "aaron-bond.better-comments",
        "wowbox.code-debuger",
        "bierner.markdown-mermaid",
        "rogalmic.bash-debug",
        "p1c2u.docker-compose",
        "ms-azuretools.vscode-docker",
        "robocorp.robocorp-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/venv/bin/python",
        "python.formatting.provider": "none",
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.rulers": [100, 119, 140],
        "black-formatter.args": ["--line-length", "119"],
        "python.analysis.extraPaths": [
          "${workspaceFolder}/src",
          "${workspaceFolder}/schemas",
          "${workspaceFolder}/defaults"
        ]
      }
    }
  }
}
