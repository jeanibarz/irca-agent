{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://yourdomain.com/schemas/v1/training_args_schema",
    "type": "object",
    "properties": {
      "dataset": {
        "type": "string"
      },
      "push_to_hub": {
        "type": "boolean"
      },
      "version": {
        "type": "string"
      },
      "lora_r": {
        "type": "integer"
      },
      "lora_dropout": {
        "type": "number"
      },
      "lora_alpha": {
        "type": "integer"
      },
      "num_train_epochs": {
        "type": "integer"
      },
      "learning_rate": {
        "type": "number"
      },
      "model_settings": {
        "type": "object",
        "patternProperties": {
          "^[a-zA-Z0-9_]+$": {
            "$ref": "#/definitions/modelSetting"
          }
        },
        "additionalProperties": false
      }
    },
    "required": [
      "dataset",
      "version",
      "lora_r",
      "lora_dropout",
      "lora_alpha",
      "num_train_epochs",
      "learning_rate",
      "model_settings"
    ],
    "definitions": {
      "modelSetting": {
        "type": "object",
        "properties": {
          "base_model": {
            "type": "string"
          },
          "model_name": {
            "type": "string"
          }
        },
        "required": ["base_model", "model_name"]
      }
    }
  }
  